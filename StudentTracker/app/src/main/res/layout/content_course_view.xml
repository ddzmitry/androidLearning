<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dev.ddzmitry.studenttracker.CourseActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_course_view">


    <EditText
        android:id="@+id/editCourseMentorPhone"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Mentor Phone"
        android:inputType="phone"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCourseMentorName" />

    <EditText
        android:id="@+id/editCourseText"
        android:layout_width="241dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Course Name"

        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editCourseStartDate"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Course Start Date"
        android:inputType="date"
        android:textSize="8sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/editCourseText"
        app:layout_constraintTop_toBottomOf="@+id/editCourseText" />

    <EditText
        android:id="@+id/editCourseEndDate"
        android:layout_width="172dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Course End Date"
        android:inputType="date"
        android:textSize="8sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/editCourseStartDate"
        app:layout_constraintTop_toBottomOf="@+id/editCourseStartDate" />

    <Button
        android:id="@+id/buttonSaveUpdate"
        android:layout_width="107dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editCourseNote"
        app:layout_constraintTop_toBottomOf="@+id/editCourseMentorEmail" />

    <TextView
        android:id="@+id/textViewTermName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Course Name"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/editCourseText"
        app:layout_constraintEnd_toStartOf="@+id/editCourseText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTermStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Start Date"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/editCourseStartDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editCourseStartDate" />

    <TextView
        android:id="@+id/textViewTermEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="End Date"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/editCourseEndDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTermStart" />

    <Spinner
        android:id="@+id/editCourseSpinner"
        android:layout_width="239dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toEndOf="@+id/textViewTermEnd"
        app:layout_constraintTop_toBottomOf="@+id/editCourseEndDate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Status"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/editCourseSpinner"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTermEnd" />

    <EditText
        android:id="@+id/editCourseMentorEmail"
        android:layout_width="158dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Mentor Email"
        android:inputType="textEmailAddress"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editCourseMentorName"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editCourseMentorName"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Mentor Name"
        android:inputType="textPersonName"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editCourseNote"
        android:layout_width="210dp"
        android:layout_height="56dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Note"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCourseMentorPhone"
        app:layout_constraintVertical_bias="0.508" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="137dp"
        android:text="Mentor Info"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCourseSpinner" />

    <EditText
        android:id="@+id/NotePhoneReciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Send note to phone"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/editCourseNote"
        app:layout_constraintEnd_toStartOf="@+id/NotifyBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/editCourseNote"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaveUpdate"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/NotifyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Notify"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaveUpdate" />


</android.support.constraint.ConstraintLayout>