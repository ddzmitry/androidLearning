<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dev.ddzmitry.studenttracker.AssessmentActivity"
    tools:showIn="@layout/activity_assessment">


    <EditText
        android:id="@+id/editAssessmentText"
        android:layout_width="241dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Assessment Name"

        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editAssessmentDueDate"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Assessment Due Date"
        android:inputType="date"
        android:textSize="8sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/editAssessmentText"
        app:layout_constraintTop_toBottomOf="@+id/editAssessmentText" />

    <Button
        android:id="@+id/buttonSaveUpdate"
        android:layout_width="107dp"
        android:layout_height="0dp"
        android:layout_marginEnd="140dp"
        android:layout_marginTop="48dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAssessmentSpinner" />

    <TextView
        android:id="@+id/textViewTermName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text=" Name"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/editAssessmentText"
        app:layout_constraintEnd_toStartOf="@+id/editAssessmentText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewTermStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Due Date"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/editAssessmentDueDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editAssessmentDueDate" />

    <Spinner
        android:id="@+id/editAssessmentSpinner"
        android:layout_width="239dp"
        android:layout_height="24dp"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAssessmentDueDate" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="42dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Type"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/editAssessmentSpinner"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTermStart" />

</android.support.constraint.ConstraintLayout>
